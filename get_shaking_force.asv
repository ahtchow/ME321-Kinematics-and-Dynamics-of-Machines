function [Fs,Fs_angle] = get_shaking_force(Fo22x,Fo22y, F41x, F41y)

Fsx = (Fo22x + F14x).^2;
Fsy = (F2o2y + F14y).^2;

% Magnitude
Fs = sqrt( (Fsx).^2 + (Fsy).^2 );

Fs_angle = zeros(size(Fsx));

% Direction relative to 0 degrees
for i = 1:length(Fsx)

   if Fsy(i) >= 0 % Q1 and Q2
       Fs_angle(i) = acosd( Fsx(i) / Fs(i) );
       
   else % Q3 and Q4
       Fs_angle(i) = 360 - acosd( Fsx(i) / Fs(i) );

   end
    
end

end